<assembly>
  <id>dist</id>
  <formats>
    <format>dir</format>
    <format>zip</format>
  </formats>
  <dependencySets>
    <dependencySet>
      <outputDirectory>dist/</outputDirectory>
    </dependencySet>
  </dependencySets>  
  <fileSets>
    <fileSet>
      <directory>dist/</directory>
      <includes>
      	<include>*.sh</include>
      	<include>*.bat</include>
      	<include>*.xml</include>      	      	
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/main/java/net/sf/l2j/loginserver/beans/</directory>
      <includes>
      	<include>*.xml</include>      	      	
      </includes>
    </fileSet>
    <fileSet>
      <directory>config/</directory>
      <outputDirectory>dist/config/</outputDirectory>
      <includes>
      	<include>*.*</include>
      </includes>
    </fileSet>    
  </fileSets>
</assembly>